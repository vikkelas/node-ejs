<%- include('./layout/header',{title: title}) %>
    <main class="container-md">
        <div class="row justify-content-center">
            <div class="col-8 mt-5">
                <h1>Книги</h1>
                <ul class="list">
                    <% books.forEach(item=>{%>
                        <li class="listItem">
                            <h5><%= item.title %></h5>
                            <span><%= item.authors%></span>
                            <div class="buttons">
                                <a href="/book/<%= item.id %>">
                                    <button name="open" type="button" class="btn btn-success btn-sm"><i class="bi bi-eye-fill"></i></button>
                                </a>
                                <a href="/update/<%= item.id %>">
                                    <button name="change" type="button" class="btn btn-warning btn-sm"><i class="bi bi-pen-fill"></i></button>
                                </a>
                                <a href="/delete/<%=item.id%>">
                                    <button name="delete" type="button" class="btn btn-danger btn-sm"><i class="bi bi-trash3-fill"></i></button>
                                </a>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </main>
<%- include('./layout/footer') %>
